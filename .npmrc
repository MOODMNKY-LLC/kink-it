# ============================================
# PNPM Configuration for KINK IT
# ============================================

# Use hoisted node_modules structure for better IDE support
# This creates a flat node_modules structure that tools like TypeScript can find easily
node-linker=hoisted

# Don't fail on peer dependency conflicts
# Many packages have peer dependency warnings that don't actually cause issues
strict-peer-dependencies=false

# Automatically install peer dependencies
# Saves time and prevents missing peer dependency errors
auto-install-peers=true

# Hoist all dependencies to root node_modules
# Improves compatibility with tools that expect flat node_modules
shamefully-hoist=true

# Store location (optional - use pnpm's default)
# store-dir=~/.pnpm-store

# Fetch concurrency for faster installs
network-concurrency=16

# Side effects cache for faster rebuilds
side-effects-cache=true



